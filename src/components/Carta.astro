---
// components/CartaRomantica.astro

interface Props {
  destinatario: string;
  remitente: string;
  mensaje: string;
  fecha?: string;
}

const { destinatario, remitente, mensaje, fecha = new Date().toLocaleDateString() } = Astro.props;
---

<style>
  .carta-romantica {
    max-width: 500px;
    margin: 2rem auto;
    background: linear-gradient(150deg, #fff5f5 0%, #ffe6e9 100%);
    border-radius: 15px;
    padding: 2.5rem;
    position: relative;
    box-shadow: 0 8px 32px rgba(255, 100, 150, 0.1);
    border: 1px solid #ffd1dc;
  }

  .corazon-flotante {
    position: absolute;
    opacity: 0.1;
    font-size: 1.8rem;
    animation: flotar 3s ease-in-out infinite;
  }

  @keyframes flotar {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-15px); }
  }

  .cabecera-romantica {
    border-bottom: 2px dashed #ff7eb9;
    padding-bottom: 1rem;
    margin-bottom: 1.5rem;
    position: relative;
  }

  .destinatario-romantico {
    font-family: 'Dancing Script', cursive;
    font-size: 2.2rem;
    color: #ff4d6d;
    margin: 0;
    text-align: center;
  }

  .fecha-romantica {
    text-align: center;
    color: #ff758f;
    font-family: 'Great Vibes', cursive;
    font-size: 1.1rem;
    margin-top: 0.5rem;
  }

  .cuerpo-romantico {
    font-family: 'Parisienne', cursive;
    font-size: 1.2rem;
    line-height: 1.8;
    color: #590d22;
    min-height: 200px;
    padding: 1rem;
    background: url("data:image/svg+xml,%3Csvg width='40' height='40' viewBox='0 0 40 40' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M20 20.5V18H0v-2h20v-2H0v-2h20V8H0V6h20V4H0V2h20V0H0v20h20v-2.5zM0 22h20v18H0V22z' fill='%23ffccd5' fill-opacity='0.1' fill-rule='evenodd'/%3E%3C/svg%3E");
  }

  .sello-amor {
    position: absolute;
    top: -25px;
    right: -25px;
    background: #fff;
    width: 60px;
    height: 60px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 2rem;
    box-shadow: 0 4px 12px rgba(255, 0, 85, 0.1);
    transform: rotate(-15deg);
    transition: transform 0.3s ease;
    cursor: pointer;
  }

  .sello-amor:hover {
    transform: rotate(0deg) scale(1.1);
  }

  .firma-romantica {
    margin-top: 2rem;
    text-align: center;
    font-family: 'La Belle Aurore', cursive;
    font-size: 1.8rem;
    color: #ff4d6d;
    position: relative;
    display: inline-block;
  }

  .firma-romantica::after {
    content: '';
    position: absolute;
    bottom: -10px;
    left: 0;
    right: 0;
    height: 2px;
    background: linear-gradient(90deg, transparent 0%, #ff758f 50%, transparent 100%);
  }

  /* Posicionamiento corazones */
  .corazon-1 { top: 10%; left: 5%; animation-delay: 0s; }
  .corazon-2 { top: 30%; right: 10%; animation-delay: 0.5s; }
  .corazon-3 { bottom: 20%; left: 15%; animation-delay: 1s; }
</style>

<div class="carta-romantica">
  <!-- Corazones decorativos -->
  <div class="corazon-flotante corazon-1">üíñ</div>
  <div class="corazon-flotante corazon-2">üíù</div>
  <div class="corazon-flotante corazon-3">üíò</div>

  <div class="cabecera-romantica">
    <div class="sello-amor">üíå</div>
    <h2 class="destinatario-romantico">{destinatario}</h2>
    <div class="fecha-romantica">{fecha}</div>
  </div>

  <div class="cuerpo-romantico" set:html={mensaje} />

  <div class="firma-romantica">
    {remitente}
  </div>
</div>