<style>
	.love-message {
	  text-align: center;
	  padding: 4rem 1rem;
	  font-family: 'Handlee', cursive;
	  background: #fff9fb;
	}
  
	.love-message h2 {
	  color: #e91e63;
	  font-size: 2.5rem;
	  margin-bottom: 1rem;
	}
  
	.love-message p {
	  font-size: 1.2rem;
	  color: #795548;
	}
	.header {
    text-align: center;
    padding: 2rem;
    background: #fff0f5;
    position: relative;
    font-family: 'Pacifico', cursive;
  }

  .hearts {
    display: flex;
    justify-content: center;
    gap: 1rem;
    margin-top: 1rem;
  }

  .heart {
    animation: float 3s ease-in-out infinite;
    font-size: 1.5rem;
    color: #ff69b4;
  }

  .footer {
    text-align: center;
    padding: 2rem;
    background: #333;
    color: white;
    position: relative;
  }

  .firework {
    font-size: 2rem;
    animation: sparkle 1s infinite alternate;
    margin-top: 1rem;
  }

  @keyframes float {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-10px); }
  }

  @keyframes sparkle {
    from { opacity: 0.5; }
    to { opacity: 1; }
  }
  </style>